{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=construction_tracker.db"
  },
  "DatabaseProvider": "Sqlite",
  "JwtSettings": {
    "SecretKey": "development-secret-key-for-testing-only-not-for-production-use",
    "Issuer": "ConstructionTracker.API",
    "Audience": "ConstructionTracker.Client",
    "ExpirationInDays": 7
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173",
      "http://127.0.0.1:3000",
      "http://127.0.0.1:5173"
    ]
  }
}
